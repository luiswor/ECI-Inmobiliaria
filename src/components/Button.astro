---


const { type, content, link, variant } = Astro.props
---

<>
    {
        type == 'link' ?

        <a href={!link ? '#' : link} class:list={['btn', `${variant}`]}>
            <span>{content}</span>
        </a> 
        
        :
        
        <button class:list={['btn', `${variant}`]}>
            <span>{content}</span>
        </button>
    }
</>

<style lang="scss">
    .btn { 
        display: block;
        max-width: max-content;
        min-width: 15rem;
        border: none;
        border-radius: 0.375rem;
        --color: var(--btn-color, #fff);
        background: var(--btn-bg, #0085FF);
        cursor: pointer;
        font-size: clamp(12px, 3vw, 1.25rem);
        font-style: normal;
        font-weight: 700;
        line-height: 1.5rem;
        text-align: center;
        padding: 0.8rem 1.5rem;
        margin: 1rem 0; 

        &.light {
            --btn-bg: #fff;
            --btn-color: var(--color-tertiary);
        }
        
        &.light-out {
            --btn-bg: #fff;
            --btn-color: var(--color-tertiary);
            border: solid 1px var(--color-tertiary);
        }

        &.secondary {
            --btn-bg: var(--color-secondary);
            --btn-color: #fff;
        }
    }
</style>