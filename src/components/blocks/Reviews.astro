<style lang="scss">
            @import "../../../sass/base/base.scss";

    .reviews {
        width: 100%;
        padding: 4rem 0;
        margin: 4rem 0;
    }

    .slider {
        width: 100%;
    }

    .slide {
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        display: flex;
        align-items: center;

        @include sm {
            flex-direction: column;
        }
    }

    .author {
        flex: 1 1 35%;
        text-align: center;
        padding: 0 2rem;

        &_name {
            font-size: 1.25rem;
            font-weight: 400;
            line-height: 2rem;
        }
    }

    .content {
        flex: 1 1 65%;

        &_comment {
            font-size: 2.25rem;
            font-weight: 700;
            line-height: 108.023%;
        }
    }
</style>

<script>
    import Swiper from 'swiper';
    import { Navigation } from 'swiper/modules';


    const swiper = new Swiper('.swiper', {
        loop: true,
        navigation: true,
        modules: [Navigation],
        autoHeight: true,
        spaceBetween: 30,
        autoplay: {
            delay: 300
        }
    });
</script>