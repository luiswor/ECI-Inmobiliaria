---
import Button from "../Button.astro";

const {title, content, action, link, variant} = Astro.props;
---
<section class:list={[`banner flex between middle md:column ${variant}`]}>
    <div class="banner_content">
        <p class="banner_title">{title}</p>
        <p class="banner_text">{content}</p>
    </div>

    <Button content={action}/>
</section>

<style lang="scss">
    /*  */
    @import "../../../sass/base/base.scss";

    .banner {
      background-color: var(--banner-bg, #221F5A);
      border-radius: 1.375rem;
      border: 2px solid var(--banner-border, transparent);
      padding: 2rem 5rem;
      margin: 3rem 0;

      @include md {
        padding: 2rem;
      }

      &_content {
        width: 100%;
        max-width: 600px; 
      }
  
      &_title {
        font-size: clamp(1rem, 5vw, 3rem);
        font-weight: 700;
        line-height: 108.023%;
        color: var(--banner-color, #fff);
      }
  
      &_text {
        font-size: clamp(11px, 10vw, 1.5rem);
        font-weight: 400;
        line-height: 2rem;
        color: var(--banner-color, #fff);
      }

      &.light {
        --banner-bg: #fff;
        --banner-color: #0085FF;
        --banner-border: #0085FF;
      }
    }
  
  </style>