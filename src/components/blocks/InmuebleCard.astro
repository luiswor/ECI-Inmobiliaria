---
import { Image } from 'astro:assets';
import cardimg from '../../media/img/inmueble_1.png';

---
<a href="/inmueble">
    <article class="card">
        <div class="card_img">
            <Image src={cardimg} alt="img"/>

        </div>
        <div class="card_info">
            <p class="card_title">Moderno piso en venta</p>
            <p class="card_location">Espugles de llobregat</p>
            <p class="card_price">130.000€</p>

            <div class="card_assets">
                <span>2 Hab</span>
                <span>1 Baño</span>
                <span>45m2</span>
            </div>
        </div>
    </article>
</a>

<style lang="scss">
    @import "../../../sass/base/base.scss";

    .card {
        border-radius: 3px;
        background-color: #fff;
        filter: drop-shadow(0px 2px 4px rgba(14, 86, 124, 0.16));

        &_img {
            width: 100%;
            height: auto;
            overflow: hidden;
            border-radius: 5px;

            img {
                width: 100%;
                height: auto;
            }
        }

        &_info {
            padding: .7rem;
        }

        &_title {
            font-size: 1.25rem;
            font-weight: 400;
            line-height: 2rem;
            --color: #221F5A;
        }

        &_location {
            font-size: 0.9375rem;
            font-weight: 400;
            line-height: 108.023%;
            --color: #99A3AD;
        }

        &_price {
            font-size: 1.75rem;
            font-weight: 700;
            line-height: 120%;
            --color: #0085FF;
        }

        &_assets {
            display: flex;
            justify-content: center;

            span {
                font-size: 0.9375rem;
                font-style: normal;
                font-weight: 400;
                line-height: 108.023%;
                margin: 0;
                padding: 0 5px;

                + span {
                    border-left: solid 1px #C9C9C9;
                }
            }
        }
    }
</style>