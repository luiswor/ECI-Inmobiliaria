<style lang="scss">
    @import "../../sass/base/base.scss";

    .hero {
        width: 100%;
        min-height: 40vh;
        position: relative;
        isolation: isolate;

        > img {
            position: absolute;
            top: 0;
            right: 0;
            width: auto;
            max-width: 50%;
            height: 100%;
            object-fit: contain;
            z-index: -1;
            margin-top: var(--padding-header);

            @include md {
                display: none;
            }
        }

        .container {
            height: 100%;
        }

        &_content {
            width: 100%;
            max-width: 600px;
        }

        &_text {
