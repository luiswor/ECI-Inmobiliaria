            font-weight: 400;
            line-height: 108.023%;
        }
    }

    .posts {
        width: 100%;
        padding: 8rem 0;

        &_grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem 3rem;

            @include md {
                grid-template-columns: 1fr 1fr;
            }

            @include sm {
                grid-template-columns: 1fr;
            }

            > *:nth-child(1) {
                grid-column: span 2;

