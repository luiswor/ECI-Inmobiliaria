<style lang="scss">
    @import "../../sass/base/base.scss";

    .post {
        width: 100%;
        
        &_heading {
            width: 100%;
            display: grid;
            grid-template-columns: 1fr 3fr;

            @include md {
                display: flex; 
                flex-direction:column-reverse;
            }

            &_aside {
                padding: 2rem 0;
                width: 100%;
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: center;

                @include md {
                    padding: 1rem 0;
                }
            }

            &_content {
                padding: 3rem 0;

                @include md {
                    padding: 1rem 0;
                }
            }
        }

        &_body {
            width: 100%;
            display: grid;
            grid-template-columns: 1fr 3fr;
            padding: 6rem 0;

            @include sm {
                display: flex;
                flex-direction: column-reverse;
            }

            &_aside {

            }

            &_content {
                h2 {
                    font-size: 1.75rem;
                    font-weight: 700;
                    line-height: 120%
                }

                p {
                    font-size: 1.25rem;
                    font-weight: 400;
                    line-height: 2rem;
                }
            }
        }

        &_author {
            font-size: 1.125rem;
            font-weight: 700;
            line-height: 2rem;
            margin: 0;
        }

        &_date {
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5rem;
            margin: 0;
        }

        &_category {
            font-size: 1.25rem;
            font-weight: 400;
            line-height: 2.125rem;
        }

        &_title {
            font-size: 2.875rem;
            font-weight: 700;
            line-height: 4rem;
            --color: #221F5A;
        }

        &_share {
            display: flex;
            flex-direction: column;
            position: sticky;
            top: 300px;

            @include sm {
                flex-direction: row;
                gap: .5rem;
                margin-top: 3rem;
            }
        }
    }
</style>